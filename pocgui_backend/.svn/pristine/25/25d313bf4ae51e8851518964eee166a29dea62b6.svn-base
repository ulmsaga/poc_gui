package com.mobigen.cdev.datagw.module.test.repository;

import com.mobigen.cdev.datagw.module.test.dto.EduBoardDto;
import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import java.util.List;
import java.util.Map;

@Repository
public class ExceptionTestRepositoryImpl implements ExceptionTestRepository {
    private final SqlSessionTemplate sqlSessionTemplateGuiweb;

    private final String namespace = "com.mobigen.cdev.mapper.mysql.test";

    @Autowired
    public ExceptionTestRepositoryImpl(SqlSessionTemplate sqlSessionTemplateGuiweb) {
        this.sqlSessionTemplateGuiweb = sqlSessionTemplateGuiweb;
    }

    @Override
    public List<EduBoardDto> getBoardList(Map<String, Object> param) {
        return sqlSessionTemplateGuiweb.selectList(namespace+".getBoardList", param);
    }

    @Override
    public List<EduBoardDto> getBoardListForTimeOut(Map<String, Object> param) {
        return sqlSessionTemplateGuiweb.selectList(namespace+".getBoardListForTimeOut", param);
    }
}
